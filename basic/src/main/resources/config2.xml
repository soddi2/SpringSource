<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="st" class="com.spring.stu.Student">
		<constructor-arg name="name" value="안유성" />
		<constructor-arg name="age" value="12" />
		<constructor-arg name="classNum" value="3" />
	</bean>
	<bean id="info" class="com.spring.stu.StudentInfo">
		<property name="student" ref="st"></property>
		<!-- <constructor-arg ref="st"/> -->
	</bean>
		
	
</beans>















