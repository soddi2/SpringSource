			<%-- remove와 list를 위한 폼--%>
			<form method="post" name="myForm">
				<input type="hidden" name="bno" value="${vo.bno}" />
			</form>
			
			<!-- 스크립트 -->
			<script>
			$(function() {
				let form = $("#myForm");
				//수정버튼이 눌러지면 수정 폼 보내기
				//List가 눌러지면 bno는 삭제하고 myForm 보내기
				//Remove가 눌러지면 myForm 보내기
				$(".btn-default").click(function() {
					form.attr('action','remove'); //http://~/board/modify
					form.submit();
				})
				$(".btn-danger").click(function() {
					form.attr('action','remove'); //http://~/board/modify
					form.submit();
				})
				$(".btn-info").click(function() {
					form.attr('action','list');
					form.submit();
				})
				
			})
			</script>
			<%-- 스크립트 --%>
